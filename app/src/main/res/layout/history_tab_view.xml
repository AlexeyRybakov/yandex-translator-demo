<?xml version="1.0" encoding="utf-8"?>
<com.example.yandextranslatordemo.presentation.ContentLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <include layout="@layout/empty_view" />

    </FrameLayout>

    <include
        android:id="@+id/progress"
        layout="@layout/progress_bar" />

    <include layout="@layout/retry_layout" />
</com.example.yandextranslatordemo.presentation.ContentLayout>